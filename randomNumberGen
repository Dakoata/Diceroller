import java.io.Console;
import java.util.Random;
import java.util.Scanner;
import java.util.Random;
import java.util.random.*;
public class randomNumberGen {
	
 
	
	public static void main (String [] args)
	
{
		//This is creating the random class
		Random rand = new Random();
		int counter;
		counter = (0 + 1);
		int rand_intD20;
		rand_intD20 = rand.nextInt(1 , 21);
		
		
		
		
			
			//utilizing the random number generator
			//the range will be 1 -- 20
	
			//this code prints the number generated into the console
			System.out.println("d20 rolled: " +  rand_intD20);
			
	
		while (rand_intD20 < 20) {
			
				rand_intD20 = rand.nextInt(1 , 21);
				System.out.println("d20 rolled: " +  rand_intD20);
				counter++;
			
			}
		System.out.println("Dice rolled: " + counter);
		
		}
		

}

